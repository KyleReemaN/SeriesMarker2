<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="1dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/seriesImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:focusable="false" />

    <TextView
        android:id="@+id/seriesName"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="1dp"
        android:clickable="true"
        android:text="SeriesName" />

    <TextView
        android:id="@+id/seasonCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="S00" />


    <TextView
        android:id="@+id/episodeCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:text="E00" />


    <!-- add android:src="@drawable/xy"-->
    <ImageButton
        android:id="@+id/episodeUnseen"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_margin="0dp"
        android:focusable="false"
        android:padding="0dp"
        android:text="back" />

    <ImageButton
        android:id="@+id/episodeSeen"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_margin="0dp"
        android:focusable="false"
        android:padding="0dp"
        android:text="+" />

<!--
    <ImageButton
        android:id="@+id/episodeFinished"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_margin="0dp"
        android:focusable="false"
        android:padding="0dp"
        android:src="@drawable/cancel"
        android:text="A" />
-->
    
</LinearLayout>